# Drywall material
## Textures
scene.textures.wall_bump.type = blender_clouds
scene.textures.wall_bump.bright = 1.2
scene.textures.wall_bump.contrast = 1
scene.textures.wall_bump.noisetype = soft_noise
scene.textures.wall_bump.noisebasis = improved_perlin
scene.textures.wall_bump.noisesize = 0.15
scene.textures.wall_bump.noisedepth = 2
scene.textures.wall_bump.mapping.type = globalmapping3d
scene.textures.wall_bump.mapping.transformation = 3 0 0 0 0 3 0 0 0 0 3 0 0 0 0 1
# // Scale = 0.04

scene.textures.wall_bump2.type = blender_clouds
scene.textures.wall_bump2.bright = 1
scene.textures.wall_bump2.contrast = 1
scene.textures.wall_bump2.noisetype = soft_noise
scene.textures.wall_bump2.noisebasis = voronoi_f3
scene.textures.wall_bump2.noisesize = 0.15
scene.textures.wall_bump2.noisedepth = 2
scene.textures.wall_bump.mapping.type = globalmapping3d
scene.textures.wall_bump.mapping.transformation = 5 0 0 0 0 5 0 0 0 0 5 0 0 0 0 1
# // scale = 0.02

scene.textures.wall_bump_mix.type = mix
scene.textures.wall_bump_mix.texture1 = wall_bump
scene.textures.wall_bump_mix.texture2 = wall_bump2
scene.textures.wall_bump_mix.amount = 0.5

scene.textures.wall_bump_scale.type = scale
scene.textures.wall_bump_scale.texture1 = wall_bump_mix
scene.textures.wall_bump_scale.texture2 = 0.0135

### Material
scene.materials.drywall.type = matte
scene.materials.drywall.bumptex = wall_bump_scale
scene.materials.drywall.kd = 0.7 0.7 0.7
scene.materials.drywall.sigma = 12.5